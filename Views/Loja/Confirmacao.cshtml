@{
    ViewData["Title"] = "Pedido Confirmado";
}

<div class="text-center mt-5">
    <h2>✅ Seu Pedido Foi Salvo!</h2>
    <p class="lead">O próximo passo é finalizar o pedido via WhatsApp para que possamos processá-lo.</p>

    <hr />

    <a href="@ViewBag.LinkWhatsApp" target="_blank" class="btn btn-success btn-lg my-4">
        📲 Abrir WhatsApp para Finalizar
    </a>

    <p class="mt-3">
        Se o WhatsApp não abrir automaticamente, clique no botão acima.
    </p>

    <a href="@Url.Action("Index", "Home")">Voltar à página inicial</a>
</div>

<script>
    // Opcional: Tenta abrir o WhatsApp automaticamente ao carregar a página
    window.onload = function() {
        document.querySelector('.btn-success').click();
    };
</script>