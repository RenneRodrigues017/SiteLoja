@model SiteLoja.ViewModels.PerfilViewModel

@{
    ViewData["Title"] = "Meu Perfil";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <h2 class="section-title text-center mb-4">Meus Dados</h2>

            @* Exibição de Mensagens de Sucesso *@
            @if (TempData["Sucesso"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Sucesso"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light text-dark d-flex justify-content-between align-items-center border-bottom">
                    <h4 class="mb-0">Informações de Contato</h4>
                    <button class="btn btn-sm btn-outline-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#formContato" aria-expanded="false" aria-controls="formContato">
                        Editar Contato
                    </button>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Nome:</dt>
                        <dd class="col-sm-9">@Model.Nome</dd>

                        <dt class="col-sm-3">E-mail (Login):</dt>
                        <dd class="col-sm-9">@Model.Email</dd>
                    </dl>
                </div>

                <div class="collapse" id="formContato">
                    <div class="card-body border-top">
                        <form asp-action="Perfil" method="post">
                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" asp-for="CEP" /> @* Passar todos os campos não editados como hidden *@
                            <input type="hidden" asp-for="Rua" />
                            <input type="hidden" asp-for="Numero" />
                            <input type="hidden" asp-for="Cidade" />
                            <input type="hidden" asp-for="Estado" />
                            <input type="hidden" asp-for="Complemento" />
                            <input type="hidden" asp-for="NovaSenha" />
                            <input type="hidden" asp-for="ConfirmaNovaSenha" />

                            <h5 class="mb-3">Editar Contato</h5>
                            <div class="mb-3">
                                <label asp-for="Nome" class="form-label">Nome Completo</label>
                                <input asp-for="Nome" class="form-control" />
                                <span asp-validation-for="Nome" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Email" class="form-label">E-mail (Login)</label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-success mt-2">Salvar Contato</button>
                        </form>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light text-dark d-flex justify-content-between align-items-center border-bottom">
                    <h4 class="mb-0">Endereço de Entrega</h4>
                    <button class="btn btn-sm btn-outline-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#formEndereco" aria-expanded="false" aria-controls="formEndereco">
                        Editar Endereço
                    </button>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">CEP:</dt>
                        <dd class="col-sm-9">@Model.CEP</dd>

                        <dt class="col-sm-3">Rua:</dt>
                        <dd class="col-sm-9">@Model.Rua, @Model.Numero @(string.IsNullOrEmpty(Model.Complemento) ? "" : $"({Model.Complemento})")</dd>

                        <dt class="col-sm-3">Cidade/Estado:</dt>
                        <dd class="col-sm-9">@Model.Cidade / @Model.Estado</dd>
                    </dl>
                </div>

                <div class="collapse" id="formEndereco">
                    <div class="card-body border-top">
                        <form asp-action="Perfil" method="post">
                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" asp-for="Nome" /> @* Passar todos os campos não editados como hidden *@
                            <input type="hidden" asp-for="Email" />
                            <input type="hidden" asp-for="NovaSenha" />
                            <input type="hidden" asp-for="ConfirmaNovaSenha" />

                            <h5 class="mb-3">Editar Endereço</h5>
                            @* Incluir aqui os campos de CEP, Rua, Número, etc. (como estavam na sua versão original) *@
                            @* Para manter o exemplo conciso, use o HTML original para os campos de endereço aqui. *@

                            <div class="mb-3">
                                <label asp-for="CEP" class="form-label">CEP</label>
                                <input asp-for="CEP" class="form-control" placeholder="00000-000" />
                                <span asp-validation-for="CEP" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Rua" class="form-label">Rua</label>
                                <input asp-for="Rua" class="form-control" />
                                <span asp-validation-for="Rua" class="text-danger"></span>
                            </div>

                            <div class="row">
                                <div class="col-12 col-md-4 mb-3">
                                    <label asp-for="Numero" class="form-label">Número</label>
                                    <input asp-for="Numero" class="form-control" />
                                    <span asp-validation-for="Numero" class="text-danger"></span>
                                </div>
                                <div class="col-12 col-md-8 mb-3">
                                    <label asp-for="Complemento" class="form-label">Complemento (Opcional)</label>
                                    <input asp-for="Complemento" class="form-control" />
                                    <span asp-validation-for="Complemento" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-12 col-md-6 mb-3">
                                    <label asp-for="Cidade" class="form-label">Cidade</label>
                                    <input asp-for="Cidade" class="form-control" />
                                    <span asp-validation-for="Cidade" class="text-danger"></span>
                                </div>
                                <div class="col-12 col-md-6 mb-3">
                                    <label asp-for="Estado" class="form-label">Estado (Sigla)</label>
                                    <input asp-for="Estado" class="form-control" />
                                    <span asp-validation-for="Estado" class="text-danger"></span>
                                </div>
                            </div>

                            <button type="submit" class="btn btn-success w-100 mt-4">Salvar Endereço</button>
                        </form>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-light text-dark d-flex justify-content-between align-items-center border-bottom">
                    <h4 class="mb-0">Segurança</h4>
                    <button class="btn btn-sm btn-outline-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#formSenha" aria-expanded="false" aria-controls="formSenha">
                        Alterar Senha
                    </button>
                </div>
                <div class="collapse" id="formSenha">
                    <div class="card-body">
                        <form asp-action="Perfil" method="post">
                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" asp-for="Nome" /> @* Passar todos os campos não editados como hidden *@
                            <input type="hidden" asp-for="Email" />
                            <input type="hidden" asp-for="CEP" />
                            <input type="hidden" asp-for="Rua" />
                            <input type="hidden" asp-for="Numero" />
                            <input type="hidden" asp-for="Cidade" />
                            <input type="hidden" asp-for="Estado" />
                            <input type="hidden" asp-for="Complemento" />

                            <p class="text-muted small">Preencha os campos abaixo para definir uma nova senha.</p>
                            <div class="mb-3">
                                <label asp-for="NovaSenha" class="form-label">Nova Senha</label>
                                <input asp-for="NovaSenha" class="form-control" placeholder="Mínimo 8 caracteres" />
                                <span asp-validation-for="NovaSenha" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="ConfirmaNovaSenha" class="form-label">Confirme a Nova Senha</label>
                                <input asp-for="ConfirmaNovaSenha" class="form-control" />
                                <span asp-validation-for="ConfirmaNovaSenha" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-danger w-100 mt-3">Atualizar Senha</button>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}